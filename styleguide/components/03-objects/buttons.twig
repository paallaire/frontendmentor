<div class="p-5">

	{% for itemType in types %}
		<h2 class="o-heading-4 | mb-3">{{ itemType.name }}</h2>

		{% for style in itemType.styles %}

			<h3 class="o-heading-5 | mb-3">{{ style }}</h3>

			<div class="mb-4 flex flex-wrap">
				{% for item in status %}
					<a href="" class="o-{{ itemType.name }} {{ style }} {{ item.state }} | mb-3 mr-3">
						{% if item.name == "icon right" or item.name == "icon only" %}
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="24" height="24"><path class="heroicon-ui" d="M13 16v5a1 1 0 0 1-1 1H9l-3-6a2 2 0 0 1-2-2 2 2 0 0 1-2-2v-2c0-1.1.9-2 2-2 0-1.1.9-2 2-2h7.59l4-4H20a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-2.41l-4-4H13zm0-2h1.41l4 4H20V4h-1.59l-4 4H13v6zm-2 0V8H6v2H4v2h2v2h5zm0 2H8.24l2 4H11v-4z"/></svg>
						{% endif %}
						{% if item.name != "icon only" %}
							<span>{{ item.name }}</span>
						{% endif %}
						{% if item.name == "icon left" %}
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="24" height="24"><path class="heroicon-ui" d="M13 16v5a1 1 0 0 1-1 1H9l-3-6a2 2 0 0 1-2-2 2 2 0 0 1-2-2v-2c0-1.1.9-2 2-2 0-1.1.9-2 2-2h7.59l4-4H20a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-2.41l-4-4H13zm0-2h1.41l4 4H20V4h-1.59l-4 4H13v6zm-2 0V8H6v2H4v2h2v2h5zm0 2H8.24l2 4H11v-4z"/></svg>
						{% endif %}
					</a>
				{% endfor %}
			</div>
		{% endfor %}

	{% endfor %}

</div>
