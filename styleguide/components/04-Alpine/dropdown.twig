
<div class="antialiased font-sans p-8 bg-gray-1 min-h-screen">
    <div class="mx-auto w-64 text-right">
        <div
            class="relative inline-block text-left"
            x-data="dropdown()"
            x-init="init()"
            @click.away="close()"
            @keydown.window.escape="close()"
        >
            <div>
                <span class="rounded-md shadow-sm">
                    <button
                        class="inline-flex items-center justify-center w-full rounded-md border border-gray-3 px-4 py-2 bg-white text-sm leading-5 font-medium text-gray-7 hover:text-gray-5 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-8 transition ease-in-out duration-150"
                        id="options-menu"
                        type="button"
                        :aria-expanded="isActiveAria()"
                        :aria-haspopup="isActiveAria()"
                        @click="toggle()"
                    >
                        Options
                        <svg class="-mr-1 ml-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                            <path
                                fill-rule="evenodd"
                                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                clip-rule="evenodd"
                            ></path>
                        </svg>
                    </button>
                </span>
            </div>

            <div
                class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg"
                x-description="Dropdown panel, show/hide based on dropdown state."
                x-show="isOpen()"
                x-transition:enter="transition ease-out duration-100"
                x-transition:enter-end="transform opacity-100 scale-100"
                x-transition:enter-start="transform opacity-0 scale-95"
                x-transition:leave="transition ease-in duration-75"
                x-transition:leave-end="transform opacity-0 scale-95"
                x-transition:leave-start="transform opacity-100 scale-100"
            >
                <div class="rounded-md bg-white shadow-xs">
                    <div class="py-1" role="menu" aria-labelledby="options-menu" aria-orientation="vertical">
                        {% for i in 0..4 %}
                        <a
                            class="block px-4 py-2 text-sm leading-5 text-gray-7 hover:bg-gray-1 hover:text-gray-9 focus:outline-none focus:bg-gray-1 focus:text-gray-9"
                            href="#"
                            role="menuitem"
                            >Account settings {{ loop.index }}
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
